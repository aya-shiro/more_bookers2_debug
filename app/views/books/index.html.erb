      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>

      <a href="?sort=new">新しい順</a>
      <a href="?sort=star">評価の高い順</a>

      <%= render 'index', books: @books %>
    </div>



  </div>
</div>


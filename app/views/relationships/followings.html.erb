<h3>Followed</h3>

<% if @user.followings.count >= 1 %>
  <table class="table">
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(50, 50) %></td>
      <td><%= user.name %></td>
      <td>フォロー数：<%= user.followings.count %></td>
      <td>フォロワー数：<%= user.followers.count %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
  </table>
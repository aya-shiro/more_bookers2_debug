<table class='table'>
  <tr><%= image_tag user.get_profile_image(100, 100) %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>

  <tr>
    <td>follows<%= user.followings.count %></td>
  </tr>
  <tr>
    <td>followed<%= user.followers.count %></td>
  </tr>

  <!--(他人のページ かつ 自分がフォローしている場合？)-->
  <% if user.id != current_user.id && user.id == follower_id %>
    <tr>
      <td><%= link_to "フォロー外す", user_relationship_path(user.id), method: :delete, class: "btn btn-sm btn-info" %></td>
  <% else %>
      <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-success" %></td>
    </tr>
  <% end %>

</table>

<div class='row'>
  <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
